{
  "expo": {
    "name": "家族の掲示板",
    "slug": "family-bulletin-board",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "familyboard",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.family.bulletinboard",
      "infoPlist": {
        "NSCameraUsageDescription": "投稿に写真を添付するためにカメラを使用します",
        "NSPhotoLibraryUsageDescription": "投稿に写真を添付するために写真ライブラリにアクセスします"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.family.bulletinboard",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-image-picker",
        {
          "photosPermission": "投稿に写真を添付するために写真ライブラリにアクセスします",
          "cameraPermission": "投稿に写真を添付するためにカメラを使用します"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
